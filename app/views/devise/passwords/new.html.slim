= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "forgot-password-form" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('devise.passwords.email_placeholder')
  .actions
    = f.submit t('devise.passwords.submit_button'), class: "btn-submit"
  div 
    = render "devise/shared/links"
